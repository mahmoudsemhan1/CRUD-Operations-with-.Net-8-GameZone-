@model IEnumerable<Game>
@{
    ViewData["Title"] = "Home Page";
}

@{

    if (!Model.Any())
    {
        <div class="alert  alert-warning mt-4">
            <h4 class="alert-heading">No Games!</h4>
            <p class="md-0">No Game Were added yet.</p>
        </div>
    }
    else
    {
        <div class="row mt-4">
            @foreach (var game in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <a class="card border-success mb-3 text-decoration-none rounded-3 overflow-hidden" asp-controller="Games" asp-action="Details" asp-route-id="@game.Id" >
                        <div class="card-body" style=" background-image:url(@($"{FilesSettings.Imagespath}/{game.Cover}")); background-size:cover;background-position:center;height:500px">
                            <div class="d-flex align-items-end h-100">
                                <span class="badge bg-secondary rounded-0 fs-3">@game.category?.Name</span>
                            </div>
                        </div>
                        <div class="card-footer text-muted d-flex justify-content-between align-items-center">
                            <h5>@game.Name</h5>
                            <div class="d-flex">
                                @foreach (var gamedevice in game.Devices)
                                {
                                    <i class="@gamedevice.Device?.Icon me-2 fs-4"></i>
                                }
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>

    }
}
