@model Game
@{
    ViewData["Title"] = Model.Name;
}

<div class="card border-success rounded-4 mt-5 overflow-hidden shadow">
    <div class="card-body p-0">
        <div class="row g-0">
            <div class="col-md-8 p-4 d-flex flex-column justify-content-between">
                <div>
                    <h1 class="text-success fw-bolder">@Model.Name</h1>
                    <span class="badge bg-info fs-5 mb-4">@Model.category?.Name</span>
                    <p class="fs-5 mt-3">@Model.Description</p>
                </div>
                <div class="mt-4">
                    @foreach (var gamedevice in Model.Devices)
                    {
                        <i class="@gamedevice.Device?.Icon me-3 fs-1 text-secondary"></i>
                    }
                </div>
            </div>
            <div class="col-md-4">
                <img src="@($"{FilesSettings.Imagespath}/{Model.Cover}")" alt="@Model.Name" class="w-100 h-100 object-fit-cover" />
            </div>
        </div>
    </div>
</div>
